<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/menu_fragment_background"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fl_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/niv_sister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"/>

            <View
                android:id="@+id/v_bg_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/niv_sister"
                android:layout_alignTop="@id/niv_sister"
                android:background="@drawable/bg_like_circle_background"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/iv_like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/niv_sister"
                android:layout_alignTop="@id/niv_sister"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@mipmap/ic_heart_outline_white"
                android:visibility="invisible"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_sister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/fl_image"
            android:layout_below="@+id/fl_image"
            android:text="提供"
            android:textColor="#999"
            android:textSize="10sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
