<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sister"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/menu_fragment_background"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    tools:context="com.example.huo.myappgankio.ui.activity.SisterActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/cancel_action"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_sister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/sample_footer_loading_progress"/>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>
</android.support.v7.widget.CardView>
